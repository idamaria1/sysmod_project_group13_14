@model SysModelBank.Areas.Admin.Models.TransactionOverview.SeedTransaction

<link rel="stylesheet" href="~/css/clientTransactionOverview.css">

<div class="container myContainer">
    <form style="display: contents;" asp-controller="TransactionsOverview" asp-action="SaveSeed">
        <div class="row">
            <div class="col-md-9">
                <h1>Seed Transaction</h1>
            </div>
            <div class="col-md-1">
                
            </div>
        </div>

        <div class="row">
            <div class="col-md-5 mt-3 mb-4">
                <div class="form-group">
                    <label asp-for="RecipientId">Recipient account id:</label>
                    <input asp-for="RecipientId" type="text" class="form-control" id="recipientId">
                </div>
                <div class="form-group">
                    <label asp-for="Amount">Amount:</label>
                    <input asp-for="Amount" type="text" class="form-control" id="amount">
                </div>
                <div class="form-group">
                    <label asp-for="Description">Description:</label>
                    <input asp-for="Description" type="text" class="form-control" id="description">
                </div>
                <button type="submit" class="createSeed btn btn-block mt-4">Create</button>
            </div>
        </div>
    </form>
</div>